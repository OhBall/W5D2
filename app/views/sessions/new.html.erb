<h1>Sign In</h1>

<form class="" action="<%= session_url %>" method="post">
  <%= auth_token %>
  <label for="Username">Username</label>
  <input id="Username" type="text" name="user[username]" value="<%= @user.username if @user%>"> 
  <label for="Password">Password</label>
  <input id="Password" type="password" name="user[password]" value="<%= @user.password if @user%>">
  <input type="submit" name="" value="Sign In">
</form>